{
    "manifest_version": 2,
    "name": "PhishGuard",
    "version": "1.0",
    "description": "A Chrome extension to detect and notify malicious emails.",
    "permissions": ["activeTab", "https://mail.google.com/"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon16.png"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  